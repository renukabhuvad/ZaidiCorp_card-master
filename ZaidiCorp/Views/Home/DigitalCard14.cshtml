@foreach (var item in Model.customerinfo)
{

    <meta name="keywords" content="">
    <meta name="description" content="@item.customername">

    <!-- Twitter Card data -->
    <meta name="twitter:site" content="@item.customername">
    <meta name="twitter:title" content="@item.customername">
    <meta name="twitter:description" content="">
    <meta name="twitter:creator" content="http://mydc.in/?a=@item.callme-14">
    <meta name="twitter:image:src" content="@item.imageurl">

    <!-- Open Graph data -->
    <meta property="og:title" content="@item.customername" />
    <meta property="og:type" content="@item.customername" />
    <meta property="og:description" content="We are group of life insurance professionals, helping people with professional and expert advice on different types of life insurance as per their needs. We also provide support to people searching for career in life insurance sector." />
    <meta property="og:site_name" content="http://mydc.in/?a=@item.callme-14" />
    <meta property="og:image" content="@item.imageurl" />
    <meta property="article:section" content="@item.customername" />

    <div class="page-wrapper" id="home-section">
        <div class="page-details">
            <div>
                <div class="p-10"></div>
                <!-- User Profile Pic -->
                <div class="profile-pic">
                    @if (item.imageurl != "")
                    {
                        <img src="@item.imageurl" class="profile-pic-img">
                    }
                    else
                    {
                        <img src="~/images/abc.png" class="profile-pic-img">
                    }

                </div>
                <!-- User Company Name -->
                <h1 class="firmname"> @item.customername </h1>
                <!-- User First Name and Last Name -->
                <h1 class="name"> @item.designation </h1>

                <div style="width:60px;background-color:#0085C4;height:2px;margin-top: 15px;"></div>
                <!-- Cover Photo, Photo, Name and Profession section completed -->
            </div>
            <div>
                <!-- FRONT CONTACT ACTIONS START-->
                <div class="p-10"></div>
                <div class="contact-buttons">
                    <a class="contact-button" href="tel:@item.callme">
                        <i class="fas fa-phone fa-flip-horizontal"></i>
                        Call
                    </a>
                    <a class="contact-button" target="_blank" href="https://api.whatsapp.com/send?phone=91 @item.whatsapp&text=I%20have%20Visited%20Your%20Digital%20Card%20And%20I%20Have%20Some%20Query%20So%20Can%20You%20Please%20Contact%20Me">
                        <i class="fab fa-whatsapp"></i>
                        Whatsapp
                    </a>
                    <a class="contact-button" target="_blank" href="@item.fblink">
                        <i class="fab fa-facebook-f"></i>
                        Facebook
                    </a>
                    <a class="contact-button" target="_blank" href="mailto:@item.emailid">
                        <i class="fas fa-envelope fa-flip-horizontal"></i>
                        Mail
                    </a>
                </div>
                <table class="contact-action-table">
                    <tbody>
                        <tr>
                            <td>
                                <a target="_blank" href="@item.direction">
                                    <i class="fas fa-map-marker-alt contact-action-container-icon"></i>
                                </a>
                            </td>
                            <td>
                                <a target="_blank" href="@item.direction" class="contact-action-container-text" style="max-width: 220px;">
                                    @item.address
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <a href="mailto:@item.emailid">
                                    <i class="fas fa-envelope contact-action-container-icon"></i>
                                </a>
                            </td>
                            <td>
                                <a href="mailto:@item.emailid" class="contact-action-container-text">
                                    @item.emailid
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <a target="_blank" href="@item.website">
                                    <i class="fas fa-globe contact-action-container-icon"></i>
                                </a>
                            </td>
                            <td>
                                <a target="_blank" href="@item.website" class="contact-action-container-text">
                                    @item.website
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <a target="_blank" href="tel:@item.callme">
                                    <i class="fas fa-phone fa-flip-horizontal contact-action-container-icon"></i>
                                </a>
                            </td>
                            <td>
                                <a target="_blank" href="tel:@item.callme" class="contact-action-container-text" style="margin-bottom: 5px">
                                    @item.callme
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <div class="p-30"></div>
                <div class="whatsapp-input">
                    <div class="input-wrapper">
                        <label>+91</label>
                        <input id="whatsapp-input" class="input" placeholder="Enter mobile number" maxlength="10" oninput="this.value=this.value.replace(/[^0-9]/g,'');" />
                    </div>
                    <a class="whatsapp-button"
                       target="_blank"
                       href="javascript:;"
                       onclick="handleWhatsappShare(this)">
                        <i class="fab fa-whatsapp"></i>Share on Whatsapp
                    </a>
                </div>
                <div class="p-30"></div>
                <div class="shadow-buttons">
                    <form method="post" action="savecontact">
                        <button role="button" type="submit" class="shadow-button"> <i class="fas fa-download shadow-button-icon"></i> Add to Phone Book </button>
                    </form>
                </div>
                <div class="p-30"></div>

            </div>
        </div>
    </div>

    <script>
                 function handleWhatsappShare(e) {
                     const {value} = document.getElementById('whatsapp-input');
                     if (value.length < 10) {
                         e.preventDefault();
                         return;
                     }
                     var msg = encodeURIComponent('Hello,\n To Know more about our provided services click on given link...\n http://mydc.in/?a=@item.callme-14 \n Thanks & Regards \n @item.customername')
                     e.href = `https://wa.me/91${document.getElementById('whatsapp-input').value}?text=${msg}`;
                     }
                     function handleDirectWhatsappShare(e) {
                         e.href = `whatsapp: \/\/send?text=${window.location.href}`;
                   }
    </script>

    <div class="section-container" id="about-us-section">
