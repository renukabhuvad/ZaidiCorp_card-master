@model ZaidiCorp.Models.combo
@{
    ViewBag.Title = "DigitalCard14";
    Layout = "~/Views/Shared/Layout1.cshtml";
    if (Request.Cookies["msg"] != null)
    {
        ViewBag.msg = Request.Cookies["msg"].Value;
        Request.Cookies["msg"].Expires = DateTime.Now.AddSeconds(0);
    }
}

@foreach (var item in Model.customerinfo)
{
    <title> @item.customername </title>
}


<link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900" rel="stylesheet">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Shadows+Into%20Light&amp;display=swap" media="all" id="shr-font-shadows-into light">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">
<link href="~/DigitalCard14/css/style.css" rel="stylesheet">

<style>
    .profile-pic .profile-pic-img {
        width: 150px;
        height: 150px;
        margin-top: 25px;
        border-radius: 8px;
        border: 2px solid #ffffff;
    }

    .name,
    .firmname {
        font-size: 14px;
        font-weight: 500;
        color: white;
        letter-spacing: 0.6px;
        // margin-bottom: 10px;
        margin: 0;
        margin-bottom: 7px;
        text-transform: uppercase;
        text-align: left;
    }

    .firmname {
        font-size: 18px;
